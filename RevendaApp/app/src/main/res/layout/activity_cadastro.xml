<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rev_bg_app">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Julião"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="@color/rev_title"
            android:fontFamily="@font/glikerbold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Revenda"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="@color/rev_title"
            android:fontFamily="@font/glikerbold"
            android:layout_marginBottom="40dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/rev_bg_shape"
            android:padding="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CRIAR CONTA"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/rev_text_primary"
                    android:layout_gravity="center"
                    android:layout_marginBottom="24dp"/>

                <EditText
                    android:id="@+id/inputNome"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/nome_usuario"
                    android:inputType="textPersonName"
                    android:background="@drawable/bg_edittext"
                    android:textColor="@color/rev_text_primary"
                    android:textColorHint="#99FFFFFF"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="10dp"/>

                <EditText
                    android:id="@+id/inputEmail"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/bg_edittext"
                    android:textColor="@color/rev_text_primary"
                    android:textColorHint="#99FFFFFF"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="10dp"/>

                <EditText
                    android:id="@+id/inputSenha"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:hint="@string/senha"
                    android:inputType="textPassword"
                    android:background="@drawable/bg_edittext"
                    android:textColor="@color/rev_text_primary"
                    android:textColorHint="#99FFFFFF"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="10dp"/>

                <EditText
                    android:id="@+id/inputConfirmar"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:hint="@string/confirmar_senha"
                    android:inputType="textPassword"
                    android:background="@drawable/bg_edittext"
                    android:textColor="@color/rev_text_primary"
                    android:textColorHint="#99FFFFFF"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="10dp"/>

                <Button
                    android:id="@+id/btnCriarCadastro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center"
                    android:text="@string/criar_cadastro"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_button"
                    android:minWidth="160dp"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="10dp"/>

                <TextView
                    android:id="@+id/linkLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_gravity="center"
                    android:text="Já tenho uma conta"
                    android:textStyle="bold"
                    android:textColor="@color/rev_text_primary"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>